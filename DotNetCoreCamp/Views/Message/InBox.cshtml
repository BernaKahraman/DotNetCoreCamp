@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Gelen Kutusu</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Konu</th>
            <th>Gönderen</th>
            <th>Tarih</th>
            <th>Mesajı Aç</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <th scope="row">@item.MessageID</th>
                <td>@item.Subject</td>
                <td>@item.SenderUser.WriterName</td>
                <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
                <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-danger">Mesajı Aç</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Blog/BlogAdd/" class="btn btn-primary">Yeni Mesaj Oluştur</a>

